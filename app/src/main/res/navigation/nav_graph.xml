<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timer">

    <fragment
        android:id="@+id/timer"
        android:name="com.example.meditationtimer.fragments.TimerFragment"
        android:label="timer_fragment"
        tools:layout="@layout/timer_fragment" >
        <action
            android:id="@+id/action_timer_to_displayMeditationsFragment"
            app:destination="@id/displayMeditationsFragment" />
        <action
            android:id="@+id/action_timer_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayMeditationsFragment"
        android:name="com.example.meditationtimer.fragments.DisplayMeditationsFragment"
        android:label="display_meditations_fragment"
        tools:layout="@layout/display_meditations_fragment" >
        <action
            android:id="@+id/action_displayMeditationsFragment_to_timer"
            app:destination="@id/timer" />
        <action
            android:id="@+id/action_displayMeditationsFragment_to_statsFragment"
            app:destination="@id/statisticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.meditationtimer.fragments.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_displayMeditationsFragment"
            app:destination="@id/displayMeditationsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_timer"
            app:destination="@id/timer" />
        <action
            android:id="@+id/action_settingsFragment_to_statsFragment"
            app:destination="@id/statisticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.meditationtimer.fragments.StatisticsFragment"
        android:label="StatistsFragment"
        tools:layout="@layout/statistics_fragment" >
        <action
            android:id="@+id/action_statsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_statsFragment_to_timer"
            app:destination="@id/timer" />
        <action
            android:id="@+id/action_statsFragment_to_displayMeditationsFragment"
            app:destination="@id/displayMeditationsFragment" />
    </fragment>
</navigation>